{
  "name": "apex-daily-risk-workflow",
  "description": "Daily risk processing pipeline for Apex Financial",
  "tasks": [
    {
      "task_key": "apex_loan_ingestion",
      "description": "Ingest loan applications from all sources",
      "python_wheel_task": {
        "package_name": "apex_risk_platform",
        "entry_point": "loan_ingestion"
      },
      "job_cluster_key": "shared_cluster",
      "timeout_seconds": 3600,
      "max_retries": 2
    },
    {
      "task_key": "apex_credit_pull",
      "description": "Pull credit reports for new applications",
      "python_wheel_task": {
        "package_name": "apex_risk_platform",
        "entry_point": "credit_pull"
      },
      "job_cluster_key": "shared_cluster",
      "timeout_seconds": 7200,
      "max_retries": 1,
      "depends_on": [
        {
          "task_key": "apex_loan_ingestion"
        }
      ]
    },
    {
      "task_key": "apex_credit_scoring",
      "description": "Apply credit scoring models",
      "python_wheel_task": {
        "package_name": "apex_risk_platform",
        "entry_point": "credit_scoring"
      },
      "job_cluster_key": "shared_cluster",
      "timeout_seconds": 5400,
      "max_retries": 2,
      "depends_on": [
        {
          "task_key": "apex_credit_pull"
        }
      ]
    },
    {
      "task_key": "apex_portfolio_risk",
      "description": "Portfolio-level risk analysis",
      "python_wheel_task": {
        "package_name": "apex_risk_platform",
        "entry_point": "portfolio_risk"
      },
      "job_cluster_key": "shared_cluster",
      "timeout_seconds": 7200,
      "max_retries": 1,
      "depends_on": [
        {
          "task_key": "apex_credit_scoring"
        }
      ]
    },
    {
      "task_key": "apex_regulatory_reporting",
      "description": "Generate regulatory compliance reports",
      "python_wheel_task": {
        "package_name": "apex_risk_platform",
        "entry_point": "regulatory_reporting"
      },
      "job_cluster_key": "shared_cluster",
      "timeout_seconds": 3600,
      "max_retries": 2,
      "depends_on": [
        {
          "task_key": "apex_portfolio_risk"
        }
      ]
    }
  ],
  "schedule": {
    "quartz_cron_expression": "0 6 * * ? *",
    "timezone_id": "UTC",
    "pause_status": "UNPAUSED"
  },
  "email_notifications": {},
  "format": "MULTI_TASK",
  "job_clusters": [
    {
      "job_cluster_key": "shared_cluster",
      "new_cluster": {
        "spark_version": "13.3.x-scala2.12",
        "node_type_id": "i3.xlarge",
        "num_workers": 4,
        "spark_conf": {
          "spark.sql.adaptive.enabled": "true"
        }
      }
    }
  ]
}